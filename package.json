{
  "name": "task-timer",
  "version": "1.0.0",
  "description": "A Task Timer plugin for Obsidian that adds time tracking to tasks",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "version": "node scripts/version.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "docs:dev": "vitepress dev docs-site",
    "docs:build": "vitepress build docs-site",
    "docs:preview": "vitepress preview docs-site"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "task",
    "timer",
    "time-tracking",
    "productivity"
  ],
  "author": "Fabian Kloosterman",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "obsidian": "latest",
    "rollup": "^3.0.0",
    "rollup-plugin-typescript2": "^0.31.1",
    "typescript": "^5.0.0",
    "vite": "^7.2.2",
    "vitepress": "^1.0.0",
    "vitest": "^4.0.9"
  }
}
